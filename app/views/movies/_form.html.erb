<%= stylesheet_link_tag "style", "data-turbo-track": "reload" %>
<%= form_with model: movie do |f| %>

  <div class="col">
    <label for="released" class="form-label">
    <%= f.radio_button :release, "released" %>
    <%= f.label :release, "Filme lançado" %>
    <%= f.radio_button :release, "not_released" %>
    <%= f.label :release, "Filme não lançado" %>
    </label>
  </div>
  
  <div class="col">
    <label for="title" class="form-label">
    <%= f.label 'Título:', { class: "form-label"}  %>
    <%= f.text_field :title, { class: "form-control" } %>
    </label>
  </div>
  
  
  <div class="col">
    <label for="year" class="form-label">
    <%= f.label 'Ano de lançamento:', { class: "form-label"}  %>
    <%= f.number_field :year, { class: "form-control"} %>
    </label>
  </div>
  
  <div class="col">
    <label for="summary" class="form-label">
    <%= f.label 'Sinopse:', { class: "form-label"}  %>
    <%= f.text_area :summary, { class: "form-control"} %>
    </label>
  </div>
  
  <div class="col">
    <label for="country" class="form-label">
    <%= f.label 'País:', { class: "form-label"}  %>
    <%= f.text_field :country, { class: "form-control" } %>
    </label>
  </div>

  <div class="col">
    <label for="time" class="form-label">
    <%= f.label 'Tempo(min):', { class: "form-label"}  %>
    <%= f.number_field :time, { class: "form-control" }  %>
    </label>
  </div>
  
  <div class="col">
    <label for="director" class="form-label">
    <%= f.label 'Diretor(a):', { class: "form-label"}  %>
    <%= f.collection_select :director_id, Director.all, :id, :name, { class: "form-control" }  %>
    </label>
  </div>
  
  <div class="col">
    <label for="genre" class="form-label">
    <%= f.label 'Gênero:', { class: "form-label"}  %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, { class: "form-control" }  %>
    </label>
  </div>

  <div class="col">
    <label for="image" class="form-label">
    <%= f.label :image, 'URL da Capa: ', { class: "form-label"}  %>
    <%= f.text_field :image, { class: "form-control" }  %>
    </label>
  </div>

  <div class="col">
    <label for="published" class="form-label">
    <%= f.radio_button :status, "Draft" %>
    <%= f.label :status, "Salvar rascunho" %>
    <%= f.radio_button :status, "published" %>
    <%= f.label :status, "Publicar" %>
    </label>
  </div>

    <%= f.submit 'Salvar', class: "btn btn-primary" %>
<% end %>